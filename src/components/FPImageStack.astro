---
import { Image } from "astro:assets";
import Chipping from "../images/front-page/image-stack/Chipping.jpg";
import Putting from "../images/front-page/image-stack/Putting.jpg";
import Lesson from "../images/front-page/image-stack/Lesson.jpg";
---

<div class="image-stack">
  <div class="putting"><Image src={Putting} alt="Putting" /></div>
  <div class="lesson"><Image src={Lesson} alt="Lesson" /></div>
  <div class="chipping"><Image src={Chipping} alt="Chipping" /></div>
  <div class="lesson"><Image src={Lesson} alt="Lesson" /></div>
</div>
<style>
  .image-stack {
    display: grid;
    position: relative;
    grid-template-columns: repeat(12, 1fr);
  }
  .putting {
    /* width: 60%; */
    grid-column: 1 / span 5;
    grid-row: 1;
    z-index: 2;
  }
  .chipping {
    width: 70%;
    grid-row: 1;
    grid-column: 5 / span 5;
    padding-top: 50%;
    z-index: 3;
  }
  .lesson {
    width: 70%;
    grid-row: 1;
    grid-column: 8 / span 5;
    padding-top: 20%;
    z-index: 4;
  }
</style>
