---
import Layout from "../layouts/Layout.astro";
import PhotoGallery2025 from "../components/2025Gallery.astro";
import PhotoGallery2024 from "../components/2024Gallery.astro";
import Tabtabs from "../components/Tabs.astro";
const sampleTabs = [
  {
    id: "2025",
    label: "2025",
    content: `
      <h3>Component Features</h3>
      <p>Our tabs component offers a rich set of functionality:</p>
      <blockquote>
        <strong>Accessibility First:</strong> Full keyboard support with proper ARIA attributes and focus management.
      </blockquote>
      <p>Navigate between tabs using:</p>
      <kbd>←</kbd> <kbd>→</kbd> Arrow keys to move between tabs<br>
      <kbd>Home</kbd> <kbd>End</kbd> Jump to first/last tab<br>
      <kbd>Enter</kbd> <kbd>Space</kbd> Activate focused tab
      <p>The component automatically handles focus states and provides clear visual feedback.</p>
    `,
  },
  {
    id: "2024",
    label: "2024",
    content: "dfdf",
  },
];
const pageTitle = "Photo Galleries";
---

<Layout pageTitle={pageTitle}>
  <div class="container">
    <article>
      <p>
        These photo galleries capture the spirit of our members, from friendly
        competitions to social gatherings. <b
          >Click on a photo to open a slideshow.</b
        >
      </p>
      <Tabtabs tabs={sampleTabs} defaultTab="2025" />
      <!-- <PhotoGallery2025 />
      <PhotoGallery2024 /> -->
    </article>
  </div>
</Layout>
<style lang="scss">
  .tabs {
    display: flex;
  }

  .tabs section {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
  }

  .tabs figure {
    flex-grow: 1;
    width: 100%;
    height: 100%;
    // display: none;
  }

  .tabs [type="radio"]:checked + figure {
    display: block;
  }

  nav.tab-control label.active {
    color: var(--primary);
    cursor: pointer;
  }
</style>
