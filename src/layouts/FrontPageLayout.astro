---
import "../styles/global.scss";
import Header from "../components/FrontPageHeader.astro";
import { Image } from "astro:assets";
const FrontPagePhotos = await Astro.glob("../images/front-page/*.jpg").then(
  (files) => {
    return files.map((file) => file.default);
  }
);
import Footer from "../components/Footer.astro";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image" href="/RPLGC-Favicon-2.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet" 
    /> -->
    <title>{pageTitle}</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-5P0H8MQSK7"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-5P0H8MQSK7");
    </script>
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <Header />
    <div class="splide" aria-label="Splide Basic HTML Example">
      <div class="splide__track">
        <ul class="splide__list">
          {
            FrontPagePhotos.map((FrontPagePhoto) => (
              <li class="splide__slide">
                <div class="splide__slide__container">
                  <Image src={FrontPagePhoto} alt="" loading="lazy" />
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <div class="container">
      <h1 style="text-align: center;">{pageTitle}</h1>
      <slot />
    </div>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
    <script>
      import "@splidejs/splide/css";
      import Splide from "@splidejs/splide";

      new Splide(".splide", {
        type: "fade",
        rewind: true,
        resetProgress: true,
        pauseOnFocus: false,
        speed: 1200,
        autoplay: true,
        interval: 6000,
        pauseOnHover: false,
        arrows: true,
        pagination: true,
        width: "1920px",
        height: "500px",
        cover: true,
        gap: "10vw",
        padding: 0,
      }).mount();
    </script>
  </body>
</html>
<style lang="scss">
  .splide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
  }
  .splide__slide::after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0));
  }
  .splide__pagination__page {
    height: 3em;
  }
  .splide__track ul li,
  .splide__arrows {
    --pico-primary-focus: transparent;
  }
  .container {
    margin-top: 450px;
  }
</style>
